<Window x:Class="EmailSend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmailSend"
        mc:Ignorable="d"
        Title="MainWindow" Height="518" Width="370.316">
    <WrapPanel Margin="0,0,0,-1.2">

        <Label Content="Адрес получателя" Margin="10px" Width="300px" Height="30px" VerticalAlignment="Top" Grid.Column="1"/>
        <TextBox x:Name="MailAdr" Text="Введите адрес" TextWrapping="Wrap" Width="300px" Margin="10px" Height="20px" VerticalAlignment="Top" Grid.Column="1"/>
        <Label Content="Тема письма" Margin="10px" />
        <TextBox x:Name="MailTopic" Margin="10px" Width="300px" Height="20px" />
        <Label Content="Контент письма" Margin="10px" Width="300px" Height="27"/>
        <TextBox x:Name="MailContent"  Height="129" Margin="10px" Width="343" Grid.Column="1" />
        <Label Width="150px" Margin="100,0,100,0" Height="100px" MouseUp="Click">
            <Image Source="Resources/gotovaja_knopka.png" Width="150px">
            </Image>
        </Label>

    </WrapPanel>

</Window>
