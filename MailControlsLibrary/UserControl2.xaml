<UserControl x:Class="MailControlsLibrary.UserControl2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MailControlsLibrary"
             mc:Ignorable="d" 
             >
    <StackPanel Orientation="Horizontal">
      
        <Button  x:Name="btBack" Content="Предыдущий" Background="Gray" HorizontalAlignment="Stretch"  Width="100" Click="btBack_Click" />
        <Button x:Name="btNext" Content="Следующий"  Background="Gray" HorizontalAlignment="Left"  Width="100" Click="Button_Click"  />

    </StackPanel>
</UserControl>
